# AR Book Explorer Environment Variables
# Copy this file to .env and fill in your actual values

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# OpenAI Configuration
EXPO_PUBLIC_OPENAI_API_KEY=your-openai-api-key
EXPO_PUBLIC_OPENAI_ORGANIZATION=your-openai-organization
EXPO_PUBLIC_OPENAI_BASE_URL=https://api.openai.com/v1

# Google Books API
EXPO_PUBLIC_GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# Google OAuth Client IDs (for Google Sign-In)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-default-google-oauth-client-id
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-ios-google-oauth-client-id
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your-android-google-oauth-client-id
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-web-google-oauth-client-id

# App Configuration
EXPO_PUBLIC_APP_NAME=AR Book Explorer
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_LOG_LEVEL=info

# API Configuration
EXPO_PUBLIC_API_BASE_URL=https://api.arbookexplorer.com
EXPO_PUBLIC_API_TIMEOUT=10000
EXPO_PUBLIC_API_RETRY_ATTEMPTS=3

# Analytics Configuration
EXPO_PUBLIC_ANALYTICS_ENABLED=true
EXPO_PUBLIC_ANALYTICS_TRACKING_ID=your-analytics-tracking-id

# Performance Monitoring
EXPO_PUBLIC_PERFORMANCE_ENABLED=true
EXPO_PUBLIC_PERFORMANCE_SAMPLE_RATE=1.0

# Crash Reporting
EXPO_PUBLIC_CRASHLYTICS_ENABLED=true

# Security Configuration
EXPO_PUBLIC_ENCRYPTION_KEY=your-encryption-key
EXPO_PUBLIC_JWT_SECRET=your-jwt-secret
EXPO_PUBLIC_API_KEY_HEADER=X-API-Key

# Feature Flags
EXPO_PUBLIC_AR_ENABLED=true
EXPO_PUBLIC_AI_ENABLED=true
EXPO_PUBLIC_GAMIFICATION_ENABLED=true
EXPO_PUBLIC_ACCESSIBILITY_ENABLED=true
EXPO_PUBLIC_OFFLINE_MODE=true

# Development Tools
EXPO_PUBLIC_REDUX_DEVTOOLS=true
EXPO_PUBLIC_FLIPPER=true
EXPO_PUBLIC_REACTOTRON=true
EXPO_PUBLIC_STORYBOOK=true
